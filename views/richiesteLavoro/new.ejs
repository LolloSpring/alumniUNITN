<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Offri le tue capacit√† e buttati in una nuova avventura!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/richieste" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="richiestaLavoro[nome]" placeholder="Nome">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="richiestaLavoro[cognome]" placeholder="Cognome">
                </div>
                <div class="form-group">
                    <label for="image">Foto</label>
                    <input type="file" id="image" name="richiestaLavoro[foto]" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="richiestaLavoro[corsoLaurea]" placeholder="Corso di Laurea">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="richiestaLavoro[annoLaurea]" placeholder="Anno di Laurea">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="richiestaLavoro[interessi]" placeholder="Interessi">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[cv]" placeholder="Cv">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[titoloTesi]" placeholder="Titolo della tesi">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[contattoMail]" placeholder="Indirizzo mail">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[contattoTelegram]" placeholder="Contatto Telegram">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
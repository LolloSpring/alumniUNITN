<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Diventa un nuovo Mentor per la community Alumni!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/mentorships" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[nome]" placeholder="Nome">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[cognome]" placeholder="Cognome">
                </div>
                <div class="form-group">
                    <label for="image">Foto</label>
                    <input type="file" id="image" name="mentorship[foto]" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[corsoLaurea]" placeholder="Corso di Laurea">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[annoLaurea]" placeholder="Anno di Laurea">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[professione]" placeholder="Professione">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[azienda]" placeholder="Azienda">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[luogo]" placeholder="Luogo">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[interessi]" placeholder="Interessi">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[cv]" placeholder="Cv">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[titoloTesi]" placeholder="Titolo della tesi">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[contattoMail]" placeholder="Indirizzo mail">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[contattoTelegram]" placeholder="Contatto Telegram">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[mezzoContattoPreferito]" placeholder="Mezzo di contatto preferito?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mentorship[quandoContattoPreferito]" placeholder="Quando sei disponibile?">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>